{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/data/GDP_Data_in_Billions_with_Continent.csv",
    "format": {"type": "csv"}
  },
  "vconcat": [
    {
      "width": 700,
      "height": 600,
      "mark": {"type": "line", "point": {"filled": true, "size": 50}},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "scale": {"domain": {"param": "brush"}},
          "axis": {
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "GDP",
          "type": "quantitative",
          "title": "GDP (USD Billions)",
          "scale": {"domain": [0, 28000]},
          "axis": {
            "values": [
              1000,
              2000,
              3000,
              4000,
              5000,
              6000,
              7000,
              8000,
              9000,
              10000,
              11000,
              12000,
              13000,
              14000,
              15000,
              16000,
              17000,
              18000,
              19000,
              20000,
              21000,
              22000,
              23000,
              24000,
              25000,
              26000,
              27000,
              28000
            ],
            "format": "$,d",
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Continent",
          "scale": {
            "domain": ["Asia", "Europe", "North America", "South America"],
            "range": ["#1F77B4", "#FF7F0E", "#D6274D", "#17BECF"]
          },
          "legend": {"labelFont": "Helvetica", "titleFont": "Helvetica"}
        },
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year"
          },
          {
            "field": "GDP",
            "type": "quantitative",
            "title": "GDP (USD Billions)",
            "format": "$,.0f"
          }
        ],
        "detail": {"field": "Country Name"}
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Country Name"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    },
    {
      "description": "Brush chart for selecting the time range",
      "width": 700,
      "height": 80,
      "mark": "point",
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "axis": {
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "GDP",
          "type": "quantitative",
          "axis": {
            "values": [
              1000,
              2000,
              3000,
              4000,
              5000,
              6000,
              7000,
              8000,
              9000,
              10000,
              11000,
              12000,
              13000,
              14000,
              15000,
              16000,
              17000,
              18000,
              19000,
              20000,
              21000,
              22000,
              23000,
              24000,
              25000,
              26000,
              27000,
              28000
            ],
            "grid": false,
            "format": "$,d",
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          },
          "scale": {"domain": [1000, 30000]}
        },
        "color": {"value": "lightgray"}
      }
    }
  ],
  "config": {
    "axis": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "legend": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "header": {"labelFont": "Helvetica", "titleFont": "Helvetica"}
  }
}