{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Life Expectancy vs GDP (2023)",
  "data": {
    "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/data/GDP2023.csv"
  },
  "params": [
    {
      "name": "GDP_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 30000,
        "step": 0.01,
        "name": "Minimum GDP: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [null, "Americas", "Europe", "Africa", "Asia", "Oceania"],
        "labels": [
          "Show All",
          "Americas",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.GDP > GDP_Above"},
    {
      "filter": "Continent_selection == null || datum.region == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDP",
      "type": "quantitative",
      "title": "GDP (in billions)",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [0.01, 100000]}
    },
    "y": {
      "field": "2023 Life Expectancy",
      "type": "quantitative",
      "title": "Life Expectancy (2023)",
      "axis": {"tickCount": 7},
      "scale": {"domain": [50, 90]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": ["Americas", "Europe", "Africa", "Asia", "Oceania"],
            "range": ["#0072B2", "#984ea3", "#f0e442", "#009e73", "#a65628"]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "GDP", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "2023 Life Expectancy",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] == 'Japan' || datum['Country Name'] == 'India' || datum['Country Name'] == 'Macao, China' || datum['Country Name'] == 'Germany' || datum['Country Name'] == 'United States' || datum['Country Name'] == 'Malaysia' || datum['Country Name'] == 'Chad' || datum['Country Name'] == 'Russia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "GDP", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "2023 Life Expectancy",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}