{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 500,
  "title": {
    "text": "Road Traffic Death Rate (per 100,000 population, 2016)",
    "frame": "group"
  },
  "style": "view",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/data/roadTrafficDeaths.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Location",
          "fields": ["properties.NAME"],
          "values": ["First Tooltip"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"First Tooltip\"]) && isFinite(+datum[\"First Tooltip\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('data_0'), data('data_1')]"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "tooltip": {
            "signal": "isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"]"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"note: \" + (isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "stroke": {"value": "white"},
          "fill": {"scale": "color", "field": "First Tooltip"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Death Rate\": format(datum[\"First Tooltip\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"First Tooltip: \" + (format(datum[\"First Tooltip\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; Death Rate: \" + (format(datum[\"First Tooltip\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "threshold",
      "domain": [5, 10, 15, 20, 25],
      "range": [
        "#f7f4f9",
        "#e7e1ef",
        "#d4b9da",
        "#df65b0",
        "#ce1256",
        "#91003f"
      ],
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "title": "First Tooltip",
      "encode": {"symbols": {"update": {"stroke": {"value": "white"}}}}
    }
  ],
  "config": {}
}