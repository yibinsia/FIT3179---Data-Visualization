{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/data/GDP_Data_in_Billions_with_Continent.csv",
    "format": {"type": "csv"}
  },
  "title": {
    "text": "GDP Growth Trends of the Top 10 Leading Economies",
    "fontSize": 30,
    "font": "Helvetica",
    "anchor": "middle"
  },
  "vconcat": [
    {
      "width": 800,
      "height": 500,
      "mark": {"type": "line", "point": {"filled": true, "size": 50}},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "scale": {"domain": {"param": "brush"}},
          "axis": {
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "GDP",
          "type": "quantitative",
          "title": "GDP (USD Billions)",
          "scale": {"domain": [0, 30000]},
          "axis": {
            "values": [0, 5000, 10000, 15000, 20000, 25000, 30000],
            "format": "$,d",
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": ["Asia", "Europe", "North America", "South America"],
            "range": ["#1F77B4", "#FF7F0E", "#D6274D", "#17BECF"]
          },
          "legend": {
            "labelFont": "Helvetica",
            "titleFont": "Helvetica",
            "orient": "none",
            "legendX": 590,
            "legendY": 300,
            "fillColor": "white",
            "padding": 10,
            "cornerRadius": 5
          }
        },
        "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year"
          },
          {
            "field": "GDP",
            "type": "quantitative",
            "title": "GDP (USD Billions)",
            "format": "$,.0f"
          }
        ],
        "detail": {"field": "Country Name"}
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Country Name"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    },
    {
      "description": "Brush chart for selecting the time range",
      "width": 700,
      "height": 80,
      "mark": "point",
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "axis": {
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "GDP",
          "type": "quantitative",
          "axis": {
            "grid": false,
            "values": [0, 5000, 10000, 15000, 20000, 25000, 30000],
            "format": "$,d",
            "titleFont": "Helvetica",
            "titleFontSize": 16,
            "labelFont": "Helvetica",
            "labelFontSize": 14
          },
          "scale": {"domain": [0, 30000]}
        },
        "color": {"value": "lightgray"}
      }
    }
  ],
  "config": {
    "axis": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "legend": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "header": {"labelFont": "Helvetica", "titleFont": "Helvetica"}
  }
}