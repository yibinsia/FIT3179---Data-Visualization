{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"resize": true},
  "data": {
    "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "title": {
    "text": "World Map by Region",
    "anchor": "middle",
    "fontSize": 30,
    "font": "Helvetica",
    "fontWeight": "bold"
  },
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "transform": [
    {
      "calculate": "datum.properties.CONTINENT == 'North America' || datum.properties.CONTINENT == 'South America' ? 'Americas' : datum.properties.CONTINENT",
      "as": "continent_category"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yibinsia/FIT3179---Data-Visualization/main/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "continent_category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Asia",
              "Europe",
              "Africa",
              "Oceania",
              "Americas",
              "Antarctica"
            ],
            "range": [
              "#1F77B4",
              "#FF7F0E",
              "#17BECF",
              "#9467BD",
              "#D6274D",
              "#D3D3D3"
            ]
          },
          "legend": {"title": "Region", "orient": "bottom-left"}
        },
        "stroke": {
          "condition": {"param": "hover", "value": "black"},
          "value": "transparent"
        },
        "strokeWidth": {
          "condition": {"param": "hover", "value": 2},
          "value": 0.5
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "continent_category",
            "type": "nominal",
            "title": "Continent"
          }
        ]
      }
    }
  ],
  "config": {
    "axis": {"labelFont": "Helvetica", "titleFont": "Helvetica"},
    "legend": {
      "labelFont": "Helvetica",
      "titleFont": "Helvetica",
      "fillColor": "white"
    },
    "header": {"labelFont": "Helvetica", "titleFont": "Helvetica"}
  }
}